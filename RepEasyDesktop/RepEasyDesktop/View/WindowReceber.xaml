<Window x:Class="RepEasyDesktop.View.WindowReceber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepEasyDesktop.View"
        mc:Ignorable="d"
        Height="110" Width="350" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Background="#FF222222">
        <TextBox x:Name="TextBoxValor" materialDesign:HintAssist.Hint="Valor" Style="{StaticResource MaterialDesignFloatingHintTextBox}" MaxLength="11" VerticalAlignment="Top" Height="50" FontSize="25" Foreground="White" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" >
            <Button x:Name="ButtonConfirmar" Content="CONFIRMAR" Margin="5" Click="ButtonConfirmar_Click" Width="150"/>
            <Button x:Name="ButtonCancelar" Content="CANCELAR" Click="ButtonCancelar_Click" Style="{StaticResource MaterialDesignFlatButton}" Width="150" Margin="35,0"/>
            <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="SnackbarThree" Margin="15"/>
        </StackPanel>
    </Grid>
</Window>
