<Window x:Class="RepEasyDesktop.WindowCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepEasyDesktop"
        mc:Ignorable="d"
        Title="Cadastro" Height="450" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Width="200" Margin="5"/>
            <TextBox Width="200" Margin="5"/>
            <TextBox Width="200" Margin="5"/>
            <TextBox Width="200" Margin="5"/>
            <Button x:Name="ButtonSalvar" Width="100" Content="SALVAR" Height="20" VerticalAlignment="Top" Click="ButtonSalvar_Click"/>
        </StackPanel>
    </Grid>
</Window>
